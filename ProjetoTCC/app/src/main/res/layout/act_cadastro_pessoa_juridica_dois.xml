<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_cadastro_pessoa_juridica_dois"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coresProvisoriasum"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.talit.projetotcc.activities.CadastroPessoaJuridicaDois">

    <ScrollView
        android:id="@+id/alterar_dados"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="16dp"
            tools:ignore="ScrollViewSize,UselessParent">

            <TextView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/borda_level"
                android:gravity="center"
                android:text="2"
                android:textColor="#ffff"
                tools:ignore="HardcodedText" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:max="100"
                android:progress="100"
                android:progressDrawable="@drawable/custom_progress_bar"
                tools:ignore="ObsoleteLayoutParam" />

            <EditText
                android:id="@+id/et_nome_funcionario"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/borda_edittext"
                android:drawableLeft="@mipmap/ic_cliente_ussuario"
                android:drawableTint="@color/coresProvisoriastres"
                android:hint="@string/edt_nome_fantasia"
                android:inputType="textPersonName"
                android:textColor="@color/coresProvisoriasdois"
                android:textColorHint="@color/coresProvisoriasdois"
                tools:ignore="RtlHardcoded,UnusedAttribute"
                tools:text="@string/et_nome_funcionario" />


            <EditText
                android:id="@+id/edt_sobrenome_funcionario"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/borda_edittext"
                android:drawableLeft="@mipmap/ic_cliente_ussuario"
                android:drawableTint="@color/coresProvisoriastres"
                android:ems="10"
                android:hint="@string/ed_razao_social"
                android:inputType="textPersonName"
                android:textColor="@color/coresProvisoriasdois"
                android:textColorHint="@color/coresProvisoriasdois"
                tools:ignore="RtlHardcoded,UnusedAttribute"
                tools:text="@string/edt_sobrenome" />

            <EditText
                android:id="@+id/ed_cpf_funcionario"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/borda_edittext"
                android:drawableLeft="@mipmap/ic_client_cpf"
                android:drawableTint="@color/coresProvisoriastres"
                android:ems="10"
                android:hint="@string/ed_dpf"
                android:inputType="number"
                android:textColor="@color/coresProvisoriasdois"
                android:textColorHint="@color/coresProvisoriasdois"
                tools:ignore="RtlHardcoded,TextFields,UnusedAttribute" />

            <EditText
                android:id="@+id/edt_user_funcionario"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/borda_edittext"
                android:drawableLeft="@mipmap/ic_cliente_ussuario"
                android:drawableTint="@color/coresProvisoriastres"
                android:ems="10"
                android:hint="@string/ed_usuario_pj"
                android:inputType="number"
                android:textColor="@color/coresProvisoriasdois"
                android:textColorHint="@color/coresProvisoriasdois"
                tools:ignore="RtlHardcoded,TextFields,UnusedAttribute" />

            <EditText
                android:id="@+id/edt_senha_funcionario"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/borda_edittext"
                android:drawableLeft="@mipmap/ic_visualizar"
                android:drawableTint="@color/coresProvisoriastres"
                android:ems="10"
                android:hint="@string/senha_cliente"
                android:inputType="textPassword"
                android:textColor="@color/coresProvisoriasdois"
                android:textColorHint="@color/coresProvisoriasdois"
                tools:ignore="RtlHardcoded,TextFields,UnusedAttribute" />

            <EditText
                android:id="@+id/edt_senha_confir"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/borda_edittext"
                android:drawableLeft="@mipmap/ic_visualizar"
                android:drawableTint="@color/coresProvisoriastres"
                android:ems="10"
                android:hint="@string/ed_confirm_senha"
                android:inputType="textPassword"
                android:textColor="@color/coresProvisoriasdois"
                android:textColorHint="@color/coresProvisoriasdois"
                tools:ignore="RtlHardcoded,TextFields,UnusedAttribute" />


            <Button
                android:id="@+id/btn_cadastrar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/bordas_grid_buttons"
                android:text="@string/btn_proximo"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"
                tools:ignore="ObsoleteLayoutParam,RtlHardcoded"
                tools:text="@string/btn_proximo" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
