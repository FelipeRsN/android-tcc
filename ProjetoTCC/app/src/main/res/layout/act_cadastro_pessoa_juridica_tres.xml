<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/act_cadastro_pessoa_juridica_tres"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.talit.projetotcc.activities.CadastroPessoaJuridicaTres">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="100dp"
        tools:ignore="ScrollViewSize,UselessParent">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/ed_email_consumidor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableRight="@mipmap/ic_email_client"
                android:ems="10"
                android:hint="@string/ed_email_consu"
                android:inputType="textPersonName"
                tools:ignore="RtlHardcoded,TextFields"
                tools:text="@string/ed_email_consu" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="0.01dp"
            tools:ignore="UselessParent">

            <Spinner
                android:id="@+id/sp_tp_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                tools:ignore="InefficientWeight" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/ed_telefones"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableRight="@mipmap/ic_telefone"
                    android:ems="10"
                    android:hint="@string/edt_telefones"
                    android:inputType="text"
                    tools:ignore="RtlHardcoded,TextFields" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btn_cadastro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:background="@drawable/bordas_grid_buttons"
        android:text="@string/btn_cadastro"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp"
        tools:text="@string/btn_cadastro" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:max="2"
        android:progress="2"/>

    <ImageView
        android:id="@+id/iv_fase1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_concluida_fase"
        android:layout_marginTop="01dp"
        android:contentDescription=""
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_fase2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_concluida_fase"
        android:layout_marginTop="01dp"
        android:layout_marginStart="135dp"
        android:contentDescription=""
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/iv_fase3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="01dp"
        android:layout_marginStart="275dp"
        tools:ignore="ContentDescription" />

</RelativeLayout>
