<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.talit.projetotcc.activities.DetalhesProdutos"
    tools:showIn="@layout/act_detalhes_produtos">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ExtraText,UselessParent"
        android:visibility="visible">

       <!-- <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/passatempo_morango"
            android:scaleType="fitCenter"
            android:id="@+id/ic_produto"
            tools:ignore="ContentDescription" />-->

        <TextView
            android:id="@+id/txtNomeProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RelativeOverlap,RtlHardcoded,UnknownIdInLayout"
            tools:text="@string/txt_nome_produto"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/txt_marca_prod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNomeProduto"
            android:padding="10dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RelativeOverlap,RtlHardcoded,SmallSp"
            tools:text="@string/txt_marca" />

        <TextView
            android:id="@+id/txt_prazo_validade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_marca_prod"
            android:layout_marginLeft="05dp"
            android:padding="05dp"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:textStyle="italic"
            android:textColor="#055A8C"
            tools:ignore="HardcodedText,RelativeOverlap,RtlHardcoded,SmallSp"
            tools:text="@string/txt_validade" />

        <TextView
            android:id="@+id/txt_cod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_prazo_validade"
            android:layout_marginLeft="05dp"
            android:padding="05dp"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:textStyle="italic"
            android:textColor="#055A8C"
            tools:ignore="HardcodedText,RelativeOverlap,RtlHardcoded,SmallSp"
            tools:text="cod" />

        <View
            android:id="@+id/divider_dois"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/txt_cod"
            android:layout_margin="4dp"
            android:background="#ACACAC" />

        <TextView
            android:id="@+id/txt_preco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider_dois"
            android:layout_marginLeft="05dp"
            android:layout_alignParentEnd="true"
            android:padding="05dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="#4CAF54"
            android:textStyle="italic"
            tools:ignore="HardcodedText,RelativeOverlap,RtlHardcoded,SmallSp"
            tools:text="@string/txt_preco" />

        <View
            android:id="@+id/divider_tres"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/txt_preco"
            android:layout_margin="4dp"
            android:background="#ACACAC" />

        <TextView
            android:id="@+id/txt_informacoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider_tres"
            android:layout_marginLeft="05dp"
            android:padding="05dp"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="italic"
            tools:ignore="HardcodedText,RelativeOverlap,RtlHardcoded,SmallSp"
            tools:text="@string/txt_info" />


    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>