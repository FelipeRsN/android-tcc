<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_redireciona_pessoa_juridica"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mercado"
    tools:context="com.example.talit.projetotcc.activities.RedirecionaPessoaJuridica">

    <ImageView
        android:id="@+id/im_escolha"
        android:layout_marginTop="64dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:text="@string/txt_escolha"
        android:src="@drawable/facaseulogin"
        android:tint="@color/colorAccent"
        tools:ignore="ContentDescription,VectorDrawableCompat" />

    <TextView
        android:id="@+id/txt_escolha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffff"
        android:gravity="center_horizontal"
        android:text="@string/txt_escolha"
        android:textSize="20sp"
        tools:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/im_escolha"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pessoa_juridica"
        android:orientation="horizontal"
        android:layout_marginStart="25dp"
        android:layout_marginTop="200dp"
        tools:ignore="UselessParent">


        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="251dp"
            android:gravity="center_horizontal">



            <ImageView
                android:id="@+id/im_pessoa_fis"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/house"
                tools:ignore="ContentDescription,VectorDrawableCompat" />

            <TextView
                android:id="@+id/txt_pessoa_fis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:gravity="center_horizontal"
                android:layout_alignBottom="@+id/im_pessoa_fis"
                android:textColor="@color/coresProvisoriasdois"
                android:layout_marginBottom="10dp"
                tools:ignore="HardcodedText,RelativeOverlap,RtlHardcoded,SmallSp"
                android:text="@string/bt_pessoa_fisica" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/pessoa_juridica"
        android:layout_marginTop="200dp"
        android:id="@+id/pessoa_fisica"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="251dp"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/im_pessoa_jur"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/business"
                tools:ignore="ContentDescription,VectorDrawableCompat" />

            <TextView
                android:id="@+id/txt_pessoa_jur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_alignBottom="@+id/im_pessoa_jur"
                tools:ignore="HardcodedText,RelativeOverlap,RtlHardcoded,SmallSp"
                android:textColor="@color/coresProvisoriasdois"
                android:layout_marginBottom="10dp"
                android:text="@string/bt_pessoa_juridica" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>




