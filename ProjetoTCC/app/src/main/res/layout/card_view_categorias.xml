<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="03dp"
    android:paddingRight="03dp">


    <android.support.v7.widget.CardView
        android:id="@+id/id_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/borda_search_view">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_categorias"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="03dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="03dp"
                fresco:failureImage="@drawable/logo_super"
                fresco:placeholderImage="@drawable/mercado"
                fresco:roundAsCircle="true" />

            <TextView
                android:id="@+id/txtNomeCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="06dp"
                android:layout_toEndOf="@+id/img_categorias"
                android:gravity="center_vertical|left"
                android:padding="05dp"
                android:text="TextView"
                android:textSize="15sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>