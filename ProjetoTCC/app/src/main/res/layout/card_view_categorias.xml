<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="01dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="25dp"
        android:paddingStart="25dp"
        app:cardBackgroundColor="#FFF"
        app:cardCornerRadius="05dp"
        app:cardElevation="02dp"
        app:cardMaxElevation="03dp"
        android:layout_marginBottom="01dp"
        android:layout_marginTop="01dp"
        android:paddingBottom="05dp"
        android:paddingTop="05dp"
        app:contentPaddingBottom="01dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/txtNomeCategoria"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="11dp"
                android:gravity="center_vertical|left"
                android:padding="05dp"
                android:text="TextView"
                android:textColor="#777"
                android:textSize="15sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/txtDescricao"
                android:tint="#ACACAC"
                app:srcCompat="@mipmap/ic_progress"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>