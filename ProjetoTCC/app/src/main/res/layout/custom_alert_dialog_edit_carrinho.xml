<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_excluir"
        style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_gravity="center_horizontal"
        android:text="@string/dialog_excluir"
        android:textColor="#777"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/minha_loca"
        android:layout_margin="4dp"
        android:background="#ACACAC"
        tools:ignore="ObsoleteLayoutParam" />

    <Button
        android:id="@+id/btn_editar"
        style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_dois"
        android:layout_gravity="center_horizontal"
        android:text="@string/dialog_editar"
        android:textColor="#777"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded" />

</LinearLayout>