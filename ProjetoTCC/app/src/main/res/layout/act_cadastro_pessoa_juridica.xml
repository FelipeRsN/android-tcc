<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_cadastro_pessoa_juridica"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coresProvisoriasum"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.talit.projetotcc.activities.CadastroPessoaJuridica">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="16dp"
        tools:ignore="ScrollViewSize,UselessParent">

        <TextView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColor="#ffff"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="1"
            android:background="@drawable/borda_level"
            tools:ignore="HardcodedText" />


        <ProgressBar
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/custom_progress_bar"
            tools:ignore="ObsoleteLayoutParam" />

        <EditText
            android:id="@+id/edt_nome_fantasia"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/borda_edittext"
            android:drawableLeft="@mipmap/ic_pessoa_pj"
            android:drawableTint="@color/coresProvisoriastres"
            android:hint="@string/edt_nome_fantasia"
            android:inputType="textPersonName"
            android:textColor="@color/coresProvisoriasdois"
            android:textColorHint="@color/coresProvisoriasdois"
            tools:ignore="RtlHardcoded,UnusedAttribute"
            tools:text="@string/edt_nome_fantasia" />


        <EditText
            android:id="@+id/ed_razao_social"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/borda_edittext"
            android:drawableLeft="@mipmap/ic_pessoa_pj"
            android:drawableTint="@color/coresProvisoriastres"
            android:ems="10"
            android:hint="@string/ed_razao_social"
            android:inputType="textPersonName"
            android:textColor="@color/coresProvisoriasdois"
            android:textColorHint="@color/coresProvisoriasdois"
            tools:ignore="RtlHardcoded,UnusedAttribute"
            tools:text="@string/ed_razao_social" />

        <EditText
            android:id="@+id/ed_telefones"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/borda_edittext"
            android:drawableLeft="@mipmap/ic_telefone"
            android:drawableTint="@color/coresProvisoriastres"
            android:ems="10"
            android:hint="@string/edt_telefones"
            android:inputType="number"
            android:textColor="@color/coresProvisoriasdois"
            android:textColorHint="@color/coresProvisoriasdois"
            tools:ignore="RtlHardcoded,TextFields,UnusedAttribute" />

        <EditText
            android:id="@+id/ed_cnpj"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/borda_edittext"
            android:drawableLeft="@mipmap/ic_client_cpf"
            android:ems="10"
            android:hint="@string/ed_cnpj"
            android:inputType="text"
            android:drawableTint="@color/coresProvisoriastres"
            android:textColor="@color/coresProvisoriasdois"
            android:textColorHint="@color/coresProvisoriasdois"
            tools:ignore="RtlHardcoded,TextFields,UnusedAttribute"
            tools:text="@string/ed_cnpj" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_proximo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bordas_grid_buttons"
        android:text="@string/btn_proximo"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp"
        tools:ignore="RtlHardcoded"
        tools:text="@string/btn_proximo" />



</RelativeLayout>
