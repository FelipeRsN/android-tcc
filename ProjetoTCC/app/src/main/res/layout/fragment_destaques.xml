<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="64dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:padding="3dp"
    android:background="#FFFF"
    tools:ignore="RtlHardcoded">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#EDEFF0"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:ignore="UselessLeaf">

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_compartilhar"
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:tint="#FFCC66"
        android:layout_marginStart="10dp"
        app:srcCompat="@drawable/trophy"
        android:layout_below="@+id/view_pager"
        style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
        tools:ignore="ContentDescription,VectorDrawableCompat" />

    <TextView
        android:id="@+id/txtAddRecent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/adicionados_recentemente"
        android:layout_alignStart="@id/btn_compartilhar"
        android:layout_marginStart="40dp"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_below="@+id/view_pager" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_destaques"
        android:scrollbars="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtAddRecent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"/>

    <RelativeLayout
        android:id="@+id/rl_nolist"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tv_nolist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Não há nada disponivel no momento :("
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="#ACACAC"
            android:textStyle="bold"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>




</RelativeLayout>