<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="02dp"
    android:paddingRight="02dp"
    android:paddingTop="16dp"
    tools:context="com.example.talit.projetotcc.activities.Notificacoes">

    <ScrollView
        android:id="@+id/dado_est"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/dados_estabelecimento"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize,UselessParent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#FFF"
                app:cardCornerRadius="03dp"
                app:cardElevation="1dp"
                app:cardMaxElevation="3dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_noticacoes_smarket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:padding="12dp"
                        android:text="@string/txt_notificacoes_smarket"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        tools:ignore="SpUsage" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/txt_noticacoes_smarket"
                        android:layout_margin="4dp"
                        android:background="#ACACAC" />

                    <TextView
                        android:id="@+id/txt_dados_notificacoes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/divider"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:padding="12dp"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        tools:ignore="RtlHardcoded,SmallSp"
                        android:text="@string/txt_notificacoes_smarket_desc" />

                    <CheckBox
                        android:id="@+id/checkSmarket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/divider"
                        android:layout_marginTop="01dp"
                        android:layout_marginEnd="05dp"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="01dp"
                app:cardBackgroundColor="#FFF"
                app:cardCornerRadius="03dp"
                app:cardElevation="1dp"
                app:cardMaxElevation="3dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_notificacoes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:padding="12dp"
                        android:text="@string/txt_notificacoes"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        tools:ignore="SpUsage" />

                    <View
                        android:id="@+id/divider_dois"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/txt_notificacoes"
                        android:layout_margin="4dp"
                        android:background="#ACACAC" />

                    <CheckBox
                        android:id="@+id/checkNot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/divider_dois"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="05dp"/>

                    <TextView
                        android:id="@+id/txt_status_pedido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/divider_dois"
                        android:layout_marginLeft="01dp"
                        android:padding="12dp"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded,SmallSp"
                        android:text="@string/txt_notificacoes_status" />

                    <TextView
                        android:id="@+id/txt_status_ped_texto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_status_pedido"
                        android:layout_marginLeft="01dp"
                        android:padding="12dp"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        tools:ignore="RtlHardcoded,SmallSp"
                        android:text="@string/txt_notificacoes_status_desc" />


                    <View
                        android:id="@+id/divider_quatro"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/txt_status_ped_texto"
                        android:layout_margin="4dp"
                        android:background="#DCDCDC" />

                    <TextView
                        android:id="@+id/txt_status_notif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/divider_quatro"
                        android:layout_marginLeft="01dp"
                        android:padding="12dp"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded,SmallSp"
                        android:text="@string/txt_notificacoes_favoritos" />

                    <TextView
                        android:id="@+id/txt_status_desc_not"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_status_notif"
                        android:layout_marginLeft="01dp"
                        android:padding="12dp"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        tools:ignore="RtlHardcoded,SmallSp"
                        android:text="@string/txt_notificacoes_favorito_desc" />


                    <CheckBox
                        android:id="@+id/checkNotFavorito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/divider_quatro"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="05dp"/>

                    <View
                        android:id="@+id/divider_cinco"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/txt_status_desc_not"
                        android:layout_margin="4dp"
                        android:background="#DCDCDC" />

                    <TextView
                        android:id="@+id/txt_promocoes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/divider_cinco"
                        android:layout_marginLeft="01dp"
                        android:padding="12dp"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded,SmallSp"
                        android:text="@string/txt_notificacoes_promoções" />

                    <TextView
                        android:id="@+id/txt_promocoes_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_promocoes"
                        android:layout_marginLeft="01dp"
                        android:padding="12dp"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        tools:ignore="RtlHardcoded,SmallSp"
                        android:text="@string/txt_notificacoes_pomoções_desc" />


                    <CheckBox
                        android:id="@+id/checkPromo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/divider_cinco"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="05dp"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>