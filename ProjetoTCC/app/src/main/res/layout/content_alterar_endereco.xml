<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="01dp"
        app:cardBackgroundColor="#FFF"
        app:cardCornerRadius="03dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/users"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="05dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_account_box_black_24dp"
                tools:ignore="ContentDescription,VectorDrawableCompat" />

            <TextView
                android:id="@+id/txt_end_alt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:padding="12dp"
                android:layout_toEndOf="@+id/users"
                android:text="@string/alt_end"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="SpUsage" />

            <View
                android:id="@+id/div"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/txt_end_alt"
                android:layout_margin="4dp"
                android:background="#ACACAC" />

            <TextView
                android:id="@+id/txt_desc_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/div"
                android:layout_marginBottom="05dp"
                android:layout_marginLeft="05dp"
                android:layout_marginRight="05dp"
                android:layout_marginTop="05dp"
                android:text="@string/alt_end_desc"
                android:textColor="#ACACAC"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:id="@+id/dados_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_users"
                android:visibility="visible">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/lv_ends"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:divider="@null"
                    android:gravity="center"
                    android:stretchMode="columnWidth"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_nolist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EDEFF0"
            android:visibility="invisible"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <TextView
                android:id="@+id/tv_nolist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/no_end"
                android:textColor="#ACACAC"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/pb_altera_end"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

    </android.support.v7.widget.CardView>

</RelativeLayout>