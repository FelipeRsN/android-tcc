<resources>

    <!-- Base application theme. -->
    <style name="MyTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/coresProvisoriasum</item>
        <item name="colorPrimaryDark">@color/coresProvisoriasdois</item>
        <item name="colorAccent">@color/coresProvisoriastres</item>
        <item name="elevation">0dp</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/coresProvisoriasum</item>
        <item name="colorPrimaryDark">@color/coresProvisoriasdois</item>
        <item name="colorAccent">@color/coresProvisoriastres</item>
        <item name="elevation">0dp</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="StyledTilEditTextTheme">
        <item name="colorControlNormal">#cccccc</item>
        <item name="colorControlActivated">#cccccc</item>
    </style>

    <style name="StyledTilEditText">
        <item name="android:theme">@style/StyledTilEditTextTheme</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColorHint">#cccccc</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Gets rid of the search icon
        <item name="searchIcon">@drawable/ic_search</item>-->
        <!-- Gets rid of the "underline" in the text -->
        <item  name="android:tint">@color/corQuatro</item>
        <item  name="android:backgroundTintMode">@color/corQuatro</item>
        <item name="queryBackground">@color/corQuatro</item>
        <item name="android:drawableTint">@color/corQuatro</item>
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="searchHintIcon">@color/corQuatro</item>
        <item name="android:color">@color/corQuatro</item>
        <item name="android:textColor">@color/corQuatro</item>
        <item name="android:colorControlActivated">@color/corQuatro</item>
        <!-- The hint text that appears when the user has not typed anything
        <item name="queryHint">@string/search_hint</item>-->
    </style>

